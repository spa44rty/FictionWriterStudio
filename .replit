modules = ["rust-stable", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Router"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web"

[[workflows.workflow]]
name = "Router"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --manifest-path core/router/Cargo.toml"
waitForPort = 8000

[[workflows.workflow]]
name = "Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/desktop && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[[ports]]
localPort = 35467
externalPort = 3000
