modules = ["rust-stable", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Router"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web"

[[workflows.workflow]]
name = "Router"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --manifest-path core/router/Cargo.toml"
waitForPort = 8000

[[workflows.workflow]]
name = "Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/desktop && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

